{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./build",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*",
      "types/**/*"],
    "exclude": ["node_modules", "prisma/migrations"],
    "ts-node": {
      "swc": true
    }
  }